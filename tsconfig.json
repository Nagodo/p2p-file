{
  	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ES6",
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"],
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/enums/*": ["./src/enums/*"],
		}
	},
	"include": ["src/**/*"]
}
